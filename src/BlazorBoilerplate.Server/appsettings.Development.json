{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=blazorboilerplate;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "ApplicationUrl": "https://localhost:44335/",

  "EmailConfiguration": {
    "FromName": "Blazor Boilerplate",
    "FromEmailAddress": "support@blazorboilerplate.com",
    "ReplyToAddress": "support@blazorboilerplate.com",
    "SmtpServer": "smtp-relay.gmail.com",
    "SmtpPort": 587,
    "SmtpUseSSL": true,
    "SmtpUseDefaultCredentials": true,
    "SmtpUsername": "support@blazorboilerplate.com",
    "SmtpPassword": "xxxx"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\log-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 5
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
