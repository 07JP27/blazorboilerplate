@functions{
    string error { get; set; } = "";
    LoginParameters loginParameters { get; set; } = new LoginParameters();

    async Task SubmitLogin()
    {
        try
        {
            error = "";
            await state.Login(loginParameters);
            uriHelper.NavigateTo("");
        }
        catch (Exception ex)
        {
            error = "Login Attempt Failed: " + ex.Message;
        }
    }
}
